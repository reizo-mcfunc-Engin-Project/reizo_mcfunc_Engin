{
    "criteria": {
        "using_item":{
            "trigger": "using_item"
        },
        "is_on_fire":{
            "trigger": "tick",
            "conditions": {
                "player": {
                    "flags": {
                        "is_on_fire": true
                    }
                }
            }
        },
        "is_on_ground":{
            "trigger": "tick",
            "conditions": {
                "player": {
                    "flags": {
                        "is_on_ground": true
                    }
                }
            }
        },
        "is_on_sneaking":{
            "trigger": "tick",
            "conditions": {
                "player": {
                    "flags": {
                        "is_sneaking": true
                    }
                }
            }
        },
        "left_click":{
            "trigger": "minecraft:player_hurt_entity",
            "conditions": {
                "entity": {
                    "type": "interaction",
                    "nbt": "{Tags:[\"reizo_mcfunc_Engin.Object.ClickDetection\"]}"
                }
            }
        },
        "right_click":{
            "trigger": "minecraft:player_interacted_with_entity",
            "conditions": {
                "entity": {
                    "type": "interaction",
                    "nbt": "{Tags:[\"reizo_mcfunc_Engin.Object.ClickDetection\"]}"
                }
            }
        },
        "is_on_hurt":{
            "trigger": "tick",
            "conditions": {
                "player": {
                    "nbt": "{HurtTime:10s}"
                }
            }
        }
    },
    "requirements": [
        [
            "using_item",
            "is_on_fire",
            "is_on_ground",
            "is_on_sneaking",
            "left_click",
            "right_click",
            "is_on_hurt"
        ]
    ],
    "rewards": {
        "function": "reizo_mcfunc_engin:player/get_data/_"
    }
}